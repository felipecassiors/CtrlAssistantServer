<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ctrlclass.server.MainScreenController">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <TextField fx:id="ipAddressField" promptText="192.168.0.2" text="192.168.137.2" GridPane.rowIndex="3" />
      <Label text="IP address:" GridPane.rowIndex="2" />
      <ButtonBar GridPane.rowIndex="4">
         <buttons>
            <Button fx:id="startButton" mnemonicParsing="false" onAction="#startButtonPressed" text="Start" />
            <Button fx:id="stopButton" mnemonicParsing="false" onAction="#stopButtonPressed" text="Stop" />
         </buttons>
      </ButtonBar>
   </children>
</GridPane>
